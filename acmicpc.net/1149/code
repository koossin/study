#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
	cin.tie(0);

    int n;
    cin >> n;
    vector<vector<int>> v(n, vector<int>(3)), dp(n, vector<int>(3));

    for(int i = 0; i < n; i++) {
        cin >> v[i][0] >> v[i][1] >> v[i][2];
    }

    dp[0] = v[0];
    for(int i = 1; i < n; i++) {
        dp[i][0] = v[i][0] + min(dp[i - 1][1], dp[i - 1][2]);
        dp[i][1] = v[i][1] + min(dp[i - 1][0], dp[i - 1][2]);
        dp[i][2] = v[i][2] + min(dp[i - 1][0], dp[i - 1][1]);
    }
    cout << min(dp[n - 1][0], min(dp[n - 1][1], dp[n - 1][2]));

    return 0;
}
