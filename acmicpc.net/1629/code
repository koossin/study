#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

long long calc(int a, int b, int c) {
    if(b == 1) {
        return a % c;
    }
    
    if(b % 2 != 0)
        return ((calc(a, b / 2, c) * calc(a, b / 2, c)) % c) * a % c;
    return (calc(a, b / 2, c) * calc(a, b / 2, c)) % c;
}

int main() {
    ios::sync_with_stdio(false);
	cin.tie(0);

    int a, b, c;
    cin >> a >> b >> c;
    
    if(b == 0) {
        cout << 1;
        return 0;
    }

    cout << calc(a,b,c);

    return 0;
}
