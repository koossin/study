#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
	cin.tie(0);

    int n;
    cin >> n;
    vector<int> arr(n);
    vector<int> result(n, 1);

    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int real_max = 1;
    for(int i = 1; i < n; i++) {
        int mmax = result[i];
        for(int j = 0; j < i; j++) {
            if(arr[j] < arr[i]) {
                int new_max = result[i] + result[j];
                if(mmax < new_max) {
                    mmax = new_max;
                }
            }
        }
        result[i] = mmax;
        if(real_max < mmax) {
            real_max = mmax;
        }
    }
    cout << real_max;


    return 0;
}
